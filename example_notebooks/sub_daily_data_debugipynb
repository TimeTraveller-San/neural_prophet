   "source": [
    "m = NeuralProphet(log_level=\"ERROR\")\n",
    "metrics = m.fit(df, freq='5T')\n",
    "metrics"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "future = m.make_future_dataframe(df, periods=10, n_historic_predictions=len(df))\n",
    "forecast = m.predict(future)\n",
    "fig = m.plot(forecast)\n",
    "# fig_comp = m.plot_components(forecast)\n",
    "fig_param = m.plot_parameters()"
